@page "/"
@inherits ProductsBase

<h3 class="mb-5">Products</h3>
@{
    var productCount = Products.Count();
}
@if (productCount > 0)
{
    @foreach (var item in GetGroupedByCategory())
    {
        <h4>@GetCategoryName(item)</h4>

        <div class="row mt-3">
            <DisplayProducts Products="item.Take(4)"></DisplayProducts>
        </div>
        <hr class="mb-3"/>
    }
}
